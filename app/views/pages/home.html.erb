<!-- Contact Section -->
<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading">Contact Us</h2>
        <h3 class="section-subheading text-muted">We'd love to hear from you!</h3>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <%= form_for @contact, :method => 'post', remote: true, authenticity_token: true, html: { class: 'form-horizontal' } do |f| %>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :name, class: 'sr-only' %>
              <%= f.text_field :name, class: 'form-control form-width', placeholder: 'Your Name *' %>
              <p class="help-block text-danger"></p>
            </div>
            <div class="form-group">
              <%= f.label :email, class: 'sr-only' %>
              <%= f.text_field :email, class: 'form-control form-width', placeholder: 'Your Email *' %>
              <p class="help-block text-danger"></p>
            </div>
            <div class="form-group">
              <%= f.label :phone, class: 'sr-only' %>
              <%= f.text_field :phone, class: 'form-control form-width', placeholder: 'Your Phone *' %>
              <p class="help-block text-danger"></p>
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-group">
              <%= f.label :message, class: 'sr-only' %>
              <%= f.text_area :message, class: 'form-control form-width', rows: 4, placeholder: 'Your Message *' %>
              <p class="help-block text-danger"></p>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="clearfix"></div>
          <div class="col-lg-12 text-center">
            <div id="success"></div>
            <%= f.submit 'Send Message', class: 'btn btn-xl' %>
          </div>
        </div>
      <% end %>
    </div>
    </div>
  </div>
</section>

